{% block body %}
{% include 'partials/nav.html.twig' %}
{% include 'partials/header.html.twig' %}

  <section class="contact-single add-contact-page">
  <!-- SECTION INFORMATIONS -->
    <div class="section section-informations">
    <!-- HEADER -->
      <div class="contact-single__head">
      <!-- BACK TO CONTACT LIST -->
        <a href="/clients/list">
          <img src="../web/img/back.png" alt="retour arriÃ¨re">
        </a>
      <!-- NOM DU CONTACT -->
        <h1 class="contact-single__title">Ajouter un utilisateur</h1>
      </div>
    <!-- BLOCS -->
      <form method="post" action="#">
        <div class="user-single__boxes">
        <!-- FORMULAIRE -->
          <div class="left-box">
